<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/dp_24">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/course"
            tools:ignore="ContentDescription" />

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_23"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/free_e_book"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:chipBackgroundColor="@color/yellow"
            app:chipCornerRadius="@dimen/dp_20"
            app:chipEndPadding="4dp"
            app:chipStartPadding="4dp"
            app:chipStrokeWidth="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_black_gradient">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/shapeableImageView"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginBottom="21dp"
                android:src="@drawable/user"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:shapeAppearanceOverlay="@style/circle" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_11"
                android:fontFamily="@font/poppins_semibold"
                android:text="Laurel Seilha"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                app:layout_constraintStart_toEndOf="@+id/shapeableImageView"
                app:layout_constraintTop_toTopOf="@+id/shapeableImageView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Product Designer"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/sp_11"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/shapeableImageView"
                app:layout_constraintStart_toStartOf="@+id/shapeableImageView">

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:fontFamily="@font/poppins_medium"
                    android:text="6 lessons"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:chipBackgroundColor="@color/blue_100"
                    app:chipCornerRadius="4dp"
                    app:chipEndPadding="4dp"
                    app:chipStartPadding="4dp"
                    app:chipStrokeWidth="0dp" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:fontFamily="@font/poppins_medium"
                    android:text="ui/ux"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:chipBackgroundColor="@color/blue_300"
                    app:chipCornerRadius="4dp"
                    app:chipEndPadding="4dp"
                    app:chipStartPadding="4dp"
                    app:chipStrokeWidth="0dp" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:fontFamily="@font/poppins_medium"
                    android:text="6 lessons"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:chipBackgroundColor="@color/move"
                    app:chipCornerRadius="4dp"
                    app:chipEndPadding="4dp"
                    app:chipStartPadding="4dp"
                    app:chipStrokeWidth="0dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_16"
                android:drawablePadding="@dimen/dp_9"
                android:fontFamily="@font/poppins_medium"
                android:text="5h 21m"
                android:textColor="@color/gray_300"
                app:drawableStartCompat="@drawable/ic_stopwatch"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
                app:layout_constraintStart_toStartOf="@+id/linearLayout3" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Step design sprint for beginner"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginEnd="@dimen/dp_16"
                app:layout_constraintBottom_toTopOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView3" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>